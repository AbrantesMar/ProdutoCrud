<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProdutoMobile.Views.ItemDetailPage"
             Title="{Binding Title}">
	<StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Nome}" FontSize="Medium"/>
        <Label Text="{Binding Categoria}" FontSize="Small"/>
        <Label Text="{Binding Id}" FontSize="Small"/>
        <Label Text="{Binding DataDeCadastro}" FontSize="Small"/>
    </StackLayout>
</ContentPage>